<table class="table">
    <tr>
        <th>MRN</th>
        <th>Name</th>
        <th>Birthdate</th>
        <th>Gender</th>
        <th>Primary Email</th>
        <th>Primary Phone</th>
        <th></th>
    </tr>

    @foreach (FilterTracker.Models.Patient item in Model.Patients)
    {
<tr>
	<td>@item.MRN</td>
	<td><span class="patient-name">@item.FirstName&nbsp;@item.LastName</span></td>
	<td><span class="patient-birthdate">@item.DateOfBirth.ToShortDateString()</span></td>
	@if (item.Gender.HasValue)
	{
		if (item.Gender.Value == 1)
		{
            <td>Male</td>
		}
		else
		{
        <td>Female</td>
		}
	}
	else
	{
		<td>&nbsp;</td>
	}
	<td>@item.Gender</td>
	<td>@item.PrimaryEmailAddress</td>
	<td>@item.PrimaryPhoneNumber</td>
	<td>@Html.ActionLink("Edit", "EditPatient", new { id = item.Id })&nbsp;|&nbsp;@Html.ActionLink("View Details", "PatientDetails", new { id = item.Id })</td>
</tr>
    }

</table>
